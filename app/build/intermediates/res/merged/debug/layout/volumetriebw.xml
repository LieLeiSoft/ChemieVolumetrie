    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

             <Button
                 android:id="@+id/btnTitrationsart"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAllCaps="false"
                 android:minEms="6"
                 android:onClick="btnClear"
                 android:text="@string/Clear" />

             <Button
                 android:id="@+id/btnWeiter"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAllCaps="false"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentTop="true"
                 android:minEms="6"
                 android:onClick="btnWeiter"
                 android:text="@string/WeiterProben" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cDunkelblau"
        android:gravity="center_vertical|center_horizontal"
        android:minEms="50"
        android:text="@string/Titrieren_der_Blindwerte"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/cHellorange"
        android:textColorHint="@color/cHellorange" />
            
