            android:gravity="center"
            android:minEms="50"
            android:text="@string/Beschriftung_Einwage"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cHellorange"
            android:textColorHint="@color/cHellorange" />

    </RelativeLayout>

