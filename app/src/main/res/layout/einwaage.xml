                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cEingabe"
                android:ems="10"
                android:gravity="center"
                android:minEms="5"
                android:text="@string/Gehalt_Urtiter"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/cDunkelblau"
                android:textColorHint="@color/cBlau"
                android:visibility="visible" />

            <EditText
                android:id="@+id/Einwaage_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cEingabe"
                android:gravity="start"
                android:hint="@string/Prozent"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Einwaage_1"
                android:textColor="@color/cDunkelblau"
                android:textColorHint="@color/cHellblau"
                android:visibility="visible" />

        </TableRow>

