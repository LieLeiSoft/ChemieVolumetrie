<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/massloesungen" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/cEingabe"
        android:gravity="center_vertical|center_horizontal"
        android:minEms="50"
        android:text="@string/gesuchter_Stoff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/cBlau"
        android:textColorHint="@color/cBlau" />

    <TextView
        android:id="@+id/tvGewMassanalyse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cEingabe"
        android:gravity="center_vertical|center_horizontal"
        android:minEms="50"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/cBlau"
        android:textColorHint="@color/cBlau" />

	   <ListView
	       android:id="@+id/lvStoffListe"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent" />

 </TableLayout>
